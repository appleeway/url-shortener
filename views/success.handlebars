<div class="row">
  <div class="col-8 mx-auto">
    <div class="card mx-auto my-5" style="width: 30rem;">
      <img
        src="https://images.unsplash.com/photo-1488272690691-2636704d6000?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1347&q=80"
        class="card-img-top" alt="">
      <div class="card-body">
        <p>Success! Please use this link:</p>
        {{!-- Target --}}
        <a id="foo" href="{{newUrl.short}}">http://leeway-url-shortener.herokuapp.com/{{newUrl.short}}</a>
        <button type="button" class="btn btn-success ml-3" data-clipboard-target="#foo">COPY LINK</button>
        <ul class="list-group list-group-flush">
          {{#each shortUrls}}
          <li class="list-group-item">
            <table class="table table-striped table-responsive">
              <thead>
                <tr>
                  <th>Full URL</th>
                  <th>Short URL</th>
                  <th>Clicks</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><a href="{{this.full}}">{{this.full}}</a></td>
                  <td><a href="{{this.short}}">{{this.short}}</a> </td>
                  <td>{{this.clicks}}</td>
                </tr>
              </tbody>
            </table>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>